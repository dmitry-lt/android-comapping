<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" package="com.comapping.android" android:versionName="1.0.2">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="10" />

	<application android:icon="@drawable/app_icon" android:label="@string/app_name">
		<activity android:name="com.comapping.android.metamap.MetaMapActivity" android:label="@string/app_name"  android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		
		<activity android:name="com.comapping.android.provider.communication.LoginActivity"  android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="com.comapping.android.intent.LOGIN"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity>

		<activity android:name="com.comapping.android.preferences.PreferencesActivity"  android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="com.comapping.android.intent.PREFERENCES"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
		</activity> 

		<activity android:name="com.comapping.android.map.MapActivity" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="com.comapping.android.intent.MAP"/>
				<category android:name="android.intent.category.DEFAULT"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>

		<provider android:name="com.comapping.android.provider.contentprovider.ComappingMapContentProvider" android:authorities="www.comapping.com"/> 
  		<provider android:name="com.comapping.android.provider.contentprovider.FileMapContentProvider" android:authorities="sdcard"/> 
	</application>
</manifest>