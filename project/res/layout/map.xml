<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	<com.comapping.android.map.MapView
		android:id="@+id/mapView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
	<CheckBox 
		android:id="@+id/edit"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Edit Mode" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:textColor="#FFFFFF"/>
	<ZoomControls
		android:id="@+id/zoom"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignBottom="@+id/mapView"
		android:layout_centerHorizontal="true">
	</ZoomControls>
	<LinearLayout
		android:id="@+id/findView"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/mapView"
		android:background="#AAAAAAAA">
		<ImageButton
			android:id="@+id/cancelButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/search_cancel_button">
		</ImageButton>
		<ImageButton
			android:id="@+id/previousButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/search_previous_button">
		</ImageButton>
		<ImageButton
			android:id="@+id/nextButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/search_next_button"
			android:clickable="true">
		</ImageButton>
		<TextView
			android:id="@+id/query"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="SearchQuery"
			android:textSize="15px"
			android:textColor="#FF000000">
		</TextView>
	</LinearLayout>
</RelativeLayout>
