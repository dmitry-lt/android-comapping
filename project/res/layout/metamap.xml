<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/metaMapButtons"
			android:orientation="horizontal">
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/upLevelButton"
				android:src="@drawable/metamap_up_grey">
			</ImageButton>
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/homeButton"
				android:src="@drawable/metamap_home_grey">
			</ImageButton>
			<ImageButton
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/synchronizeButton"
				android:src="@drawable/menu_reload"
				android:visibility="visible">
			</ImageButton>
			<ImageButton 
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/viewSwitcher"
				android:src="@drawable/metamap_sdcard">
			</ImageButton>
		</LinearLayout>
		<ListView
			android:id="@+id/listView"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_below="@+id/metaMapButtons"
			android:visibility="gone">
		</ListView>
	</RelativeLayout>
	<TextView
		android:gravity="center"
		android:layout_height="fill_parent"
		android:width="200px"
		android:layout_width="wrap_content"
		android:layout_gravity="center"
		android:visibility="invisible"
		android:id="@+id/textViewMessage">
	</TextView>
</LinearLayout>