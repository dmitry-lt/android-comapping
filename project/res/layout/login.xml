<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="center">



<TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="Login" android:paddingBottom="10px" android:textSize="30px"></TextView><TableLayout android:id="@+id/TableLayout01" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:layout_marginRight="20px" android:layout_width="fill_parent" android:stretchColumns="1">

<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20px" android:text="E-mail"></TextView><EditText android:id="@+id/email" android:scrollHorizontally="false" android:maxWidth="10px" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="10px"></EditText>
</TableRow>
<TableRow android:id="@+id/TableRow02" android:layout_width="wrap_content" android:layout_height="wrap_content"><TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Password" android:textSize="20px"></TextView><EditText android:paddingRight="10px" android:id="@+id/password" android:password="true" android:maxWidth="10px" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="10px"></EditText></TableRow>

</TableLayout>
<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center"><CheckBox android:id="@+id/CheckBox01" android:layout_width="wrap_content" android:layout_height="wrap_content"></CheckBox>
<TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="20px" android:layout_toRightOf="@+id/CheckBox01" android:layout_alignBaseline="@+id/CheckBox01" android:text="Remember me"></TextView>
</RelativeLayout><Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/login" android:textSize="30px" android:text="Login"></Button>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/error" android:layout_gravity="center"></TextView>




</LinearLayout>
