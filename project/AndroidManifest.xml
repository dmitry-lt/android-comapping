<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" android:versionName="1.0.0"
	package="com.comapping.android.controller">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MetaMapActivity" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".LoginActivity">
			<intent-filter>
				<action android:name="com.comapping.android.intent.LOGIN"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>


		<activity android:name=".PreferencesActivity">
			<intent-filter>
				<action android:name="com.comapping.android.intent.PREFERENCES"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
		</activity>

		<activity android:name=".MapActivity" android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="com.comapping.android.intent.MAP"></action>
				<category android:name="android.intent.category.DEFAULT"></category>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>

	</application>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest> 